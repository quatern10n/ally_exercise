DROP TABLE IF EXISTS TBL_UNICORN;

CREATE TABLE TBL_UNICORN (
  id INT AUTO_INCREMENT  PRIMARY KEY,
  name VARCHAR(160) NOT NULL,
  hair_color VARCHAR(200) DEFAULT NULL,
  horn_color VARCHAR(200) DEFAULT NULL,
  horn_length INT DEFAULT NULL,
  height INT DEFAULT NULL,
  height_units VARCHAR(10) DEFAULT NULL,
  weight INT DEFAULT NULL,
  weight_units VARCHAR(10) DEFAULT NULL
);

DROP TABLE IF EXISTS TBL_IDENTIFYING_MARK;

CREATE TABLE TBL_IDENTIFYING_MARK (
  id INT AUTOINCREMENT PRIMARY KEY,
  side VARCHAR(120) NOT NULL,
  location VARCHAR(180) NOT NULL,
  mark VARCHAR(240) NOT NULL,
  color VARCHAR(200) NOT NULL
);


DROP TABLE IF EXISTS TBL_UNICORN_MARKS;

CREATE TABLE TBL_UNICORN_MARKS (
  id INT AUTOINCREMENT PRIMARY KEY,
  unicorn_id INT NOT NULL,
  mark_id INT NOT NULL
);